		   			<div class="container">
			   			<div class="panel panel-info">
							  <div class="panel-heading">《<%= movie[0].name %>》经典台词</div>
							  <div class="panel-body">
							  	<% for(var i=0;i<movie[0].lines.length;i++){ %>
							  		<p class="text-success"><%= i+1 %>:<%=  movie[0].lines[i] %></p>
								<% } %>
							  </div>
						</div>
					</div>
		   			

